/**
 * Implements hook_help().
 */
function imoneza_help($path, $arg) {
  switch ($path) {
    case "admin/help#imoneza":
      return "<p>" . t("This plugin integrates your Drupal site with the iMoneza service") . "</p>";

  }
}
